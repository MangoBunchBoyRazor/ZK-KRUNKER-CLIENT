{
  "name": "ZK",
  "version": "1.0.0",
  "description": "ZK Client",
  "main": "src/index.js",
  "author": "BluZed_MangoBunchBoyRazor",
  "license": "ISC",
  "dependencies": {
    "discord-rpc": "^3.2.0",
    "electron-localshortcut": "^3.2.1",
    "electron-squirrel-startup": "^1.0.0",
    "electron-store": "^8.0.0",
    "v8-compile-cache": "^2.3.0",
    "yargs": "^16.2.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.54",
    "@electron-forge/maker-deb": "^6.0.0-beta.54",
    "@electron-forge/maker-rpm": "^6.0.0-beta.54",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.54",
    "@electron-forge/maker-zip": "^6.0.0-beta.54",
    "electron": "^8.5.5",
	"electron-builder": "latest"
  },
   "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "start": "npm install && electron ./app",
	"pack": "electron-builder --dir",
    "dist": "electron-builder",
	"build": "electron-builder build --mac --win --publish never",
    "deploy": "electron-builder build --mac --win --publish always"
  },
  "repository": {
  "type" : "git",
  "url" : "https://github.com/BluZed/ZK-KRUNKER-CLIENT.git"
  },
  "build": {
    "appId": "zk",
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "NSIS",
      "icon": "build/icon.ico"
    }
  }
}
